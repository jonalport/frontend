<div class="l-home-top">
  <div class="home-top">
    <div style="background-image: url(<%= @article.hero_image %>);" class="home-top__image"></div>
    <div class="l-constrained">
      <div class="home-top-trust">
        <p class="home-top-trust__heading"><%= @article.heading %></p>
        <ul class="home-top-trust-content">
          <li class="home-top-trust-content__item"><%= @article.bullet_1 %></li>
          <li class="home-top-trust-content__item"><%= @article.bullet_2 %></li>
          <li class="home-top-trust-content__item"><%= @article.bullet_3 %></li>
        </ul>
      </div>
      <div class="home-top-promo">
        <p class="home-top-promo__text">
          <a href="<%= @article.cta_link %>" class="home-top-promo-link">
            <%= @article.cta_text %>
            <%= render 'shared/svg/use_icon', icon: 'arrow-right', class_name: 'home-top-promo-link__arrow' %>
          </a>
        </p>
      </div>
    </div>
  </div>
</div>
